{% extends 'base.html.twig' %}

{% block title %}Activty index{% endblock %}

{% block body %}
<div class="bg-light text-center rounded p-4">
   

    <table class="table table-striped">
       <table class="table text-start align-middle table-bordered table-hover mb-0">
        <thead class="thead-dark">
                    <tr class="text-dark">
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Subject</th>
                <th scope="col">Text</th>
                <th scope="col"> ImageFileName</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activty in activties %}
            <tr>
                <td>{{ activty.id }}</td>
                <td>{{ activty.name }}</td>
                <td>{{ activty.subject }}</td>
                <td>{{ activty.text }}</td>
                <td>{{ activty.imageFileName }}</td>
                <td>
                    <a href="{{ path('app_activty_show', {'id': activty.id}) }}">show</a>
                    <a href="{{ path('app_activty_edit', {'id': activty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary" href="{{ path('app_activty_new') }}">Create new</a>
</div>
{% endblock %}
