{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block body %}
    <div class="container mt-5"> {# Ajouter la classe 'mt-5' pour ajouter un espace en haut de la page #}
        <h1 class="text-center mb-4">Statistiques</h1>
        <div class="d-flex justify-content-center"> {# Utilisez les classes Bootstrap pour centrer le contenu #}
            <canvas id="manager" width="200" height="200"></canvas> {# Augmentez la taille du canevas selon vos besoins #}
                 
        </div>
    </div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
  </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let manager = document.querySelector("#manager");
            let managerGraph = new Chart(manager, {
                type: "pie",
                data: {
                    labels: {{eventNom|raw }},
                    datasets: [{
                        label: "Repartition des event",
                        data: {{eventCount|raw}},
                        backgroundColor: {{eventColor|raw}}
                            
                        
                    }]
                },
                options: {
                    responsive: false,
                    maintainAspectRatio: false,
                    scales: {}
                }
            });
        });
    </script>
{% endblock %}
