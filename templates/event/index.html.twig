{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>subject</th>
                <th>User_id</th>
                <th>prix</th>
                <th>ImageFileName</th>
                <th>From_date</th>
                <th>To_date</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.subject }}</td>
                <td>{{ event.userId }}</td>
                <td>{{ event.prix }}</td>
                <td>{{ event.imageFileName }}</td>
                <td>{{ event.fromDate ? event.fromDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.toDate ? event.toDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.color }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
