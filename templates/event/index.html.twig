{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

<div class="bg-light text-center rounded p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        
    </div>
    <h1 class="display-4 mb-4">Event List</h1>

    <table class="table table-striped">
       <table class="table text-start align-middle table-bordered table-hover mb-0">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Name (EN)</th>
                <th scope="col">User Id</th>
                <th scope="col">Type Code</th>
                <th scope="col">From Date</th>
                <th scope="col">To Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.nameEn }}</td>
                    <td>{{ event.userId }}</td>
                    <td>{{ event.typeCode }}</td>
                    <td>{{ event.fromDate ? event.fromDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ event.toDate ? event.toDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary btn-sm">Show</a>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}" class="btn btn-success">Create New</a>
</div>


{% endblock %}
