{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
<div class="bg-light text-center rounded p-4">
   

    <table class="table table-striped">
       <table class="table text-start align-middle table-bordered table-hover mb-0">
        <thead class="thead-dark">
                    <tr class="text-dark">
                <th scope="col" >Id</th>
                <th scope="col">Name</th>
                <th scope="col">subject</th>
                <th scope="col">User id</th>
                <th scope="col">prix</th>
                <th scope="col">Image</th>
                <th scope="col">start date</th>
                <th scope="col">end date</th>
                <th scope="col">Color</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.subject }}</td>
                <td>{{ event.userId }}</td>
                <td>{{ event.prix }}</td>
                <td>{{ event.imageFileName }}</td>
                <td>{{ event.fromDate ? event.fromDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.toDate ? event.toDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.color }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary" href="{{ path('app_event_new') }}">Create new</a>
</div>
{% endblock %}
