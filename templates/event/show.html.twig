{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<div class="bg-light rounded h-100 p-4">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            
            <tr>
                <th>User_id</th>
                <td>{{ event.userId }}</td>
            </tr>
            <tr>
                <th>Type_code</th>
                <td>{{ event.subject}}</td>
            </tr>
            <tr>
                <th>ImageFileName</th>
                <td>{{ event.imageFileName }}</td>
            </tr>
            <tr>
                <th>From_date</th>
                <td>{{ event.fromDate ? event.fromDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>To_date</th>
                <td>{{ event.toDate ? event.toDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ event.color }}</td>
            </tr>
        </tbody>
    </table>
    <div class="bg-light text-center rounded p-4">
    <a href="{{ path('app_event_index') }}">back to list</a>
<br>
    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
</div></div>
{% endblock %}
